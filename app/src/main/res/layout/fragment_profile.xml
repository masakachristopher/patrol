<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/borderprofile"
    tools:context=".Fragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:clickable="true">

            <RelativeLayout
                android:id="@+id/arrowback1"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:clickable="true">

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_left_arrow" />
            </RelativeLayout>

            <TextView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/arrowback1"
                android:fontFamily="@font/sfpro"
                android:paddingLeft="15dp"
                android:text="Profile"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/ii"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/guards" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/bottomimage" />

        <!--<com.facebook.shimmer.ShimmerFrameLayout-->
        <!--android:id="@+id/shimmer_view_container"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/ii"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginLeft="30dp"-->
        <!--android:layout_marginRight="30dp"-->
        <!--android:orientation="vertical"-->
        <!--shimmer:duration="800">-->

        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="vertical">-->

        <!--<include layout="@layout/shimmerprofile" />-->

        <!--<include layout="@layout/shimmerprofile" />-->

        <!--<include layout="@layout/shimmerprofile" />-->

        <!--<include layout="@layout/shimmerprofile" />-->

        <!--<include layout="@layout/shimmerprofile" />-->
        <!--</LinearLayout>-->

        <!--</com.facebook.shimmer.ShimmerFrameLayout>-->


        <LinearLayout
            android:id="@+id/pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ii"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bordercredentials">

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/borderbutton"
                    android:padding="5dp"
                    android:src="@drawable/ic_identity_card" />

                <TextView
                    android:id="@+id/idnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/image5"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="#a7a7a7"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:fontFamily="@font/sfpro" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bordercredentials">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/borderbutton"
                    android:padding="5dp"
                    android:src="@drawable/ic_user" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/image1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="#a7a7a7"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:fontFamily="@font/sfpro" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bordercredentials">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/borderbutton"
                    android:padding="5dp"
                    android:src="@drawable/ic_phone_receiver" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/image2"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="#a7a7a7"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:fontFamily="@font/sfpro" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bordercredentials">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/borderbutton"
                    android:padding="5dp"
                    android:src="@drawable/ic_mail_black_envelope_symbol" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/image3"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="#a7a7a7"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:fontFamily="@font/sfpro" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bordercredentials">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/borderbutton"
                    android:padding="5dp"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/agency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/image4"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="#a7a7a7"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:fontFamily="@font/sfpro" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>