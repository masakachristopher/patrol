<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Activities.LoginActivity">

    <ImageView
        android:id="@+id/guard"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/loginlogo" />

    <LinearLayout
        android:id="@+id/credentials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guard"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bordercredentials">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/borderbutton"
                android:padding="5dp"
                android:src="@drawable/ic_user" />

            <EditText
                android:maxLength="10"
                android:singleLine="true"
                android:inputType="number"
                android:id="@+id/mobile"
                android:textColorHint="#a7a7a7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/image1"
                android:background="#fff"
                android:hint="Mobile"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="12sp"
                tools:fontFamily="@font/sfpro" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bordercredentials">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/borderbutton"
                android:padding="5dp"
                android:src="@drawable/ic_lock" />

            <EditText
                android:singleLine="true"
                android:inputType="textPassword"
                android:id="@+id/password"
                android:textColorHint="#a7a7a7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/image2"
                android:background="#fff"
                android:hint="Password"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="12sp"
                tools:fontFamily="@font/sfpro" />

        </RelativeLayout>

        <Button
            android:foreground="@drawable/ripple_effect"
            android:textSize="17sp"
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/borderbutton"
            android:text="Login"
            android:textColor="#fff"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:clickable="true"
        android:id="@+id/forgetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/credentials"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="40dp"
        android:text="Forget Password?"
        android:textColor="#4b4b4b"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:scaleType="fitXY"
        android:src="@drawable/gurad"
        tools:fontFamily="@font/sfpro" />
</RelativeLayout>