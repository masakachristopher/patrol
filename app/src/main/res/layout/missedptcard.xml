<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/aboveLine1"
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/dotted_red" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/missed" />

        <ImageView
            android:id="@+id/belowLine1"
            android:layout_width="4dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/dotted_red" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/rr"
        android:background="#f5f5f5"
        android:padding="7dp">

        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_calendar"
                android:drawablePadding="5dp"
                android:fontFamily="@font/sfpro"
                android:textColor="#515050"
                android:textSize="10sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/checkpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_placeholder"
                android:drawablePadding="7dp"
                android:fontFamily="@font/sfpro"
                android:textColor="#515050"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/checkpoint"
                android:fontFamily="@font/sfpro"
                android:textColor="#515050"
                android:textSize="10sp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>