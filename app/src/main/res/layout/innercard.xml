<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:id="@+id/infoR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r2">

        <LinearLayout
            android:id="@+id/rr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/aboveLine"
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/dotted" />

            <ImageView
                android:id="@+id/pt"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:srcCompat="@drawable/progress" />

            <ImageView
                android:id="@+id/belowLine"
                android:layout_width="4dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/dotted" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rr"
            android:background="#f5f5f5"
            android:padding="7dp">

            <RelativeLayout
                android:id="@+id/r3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textdate"
                    android:drawableLeft="@drawable/ic_clockcheck"
                    android:drawablePadding="3dp"
                    android:fontFamily="@font/sfpro"
                    android:text="03:30 PM"
                    android:textColor="#515050"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r3"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/checkpoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_placeholder"
                    android:drawablePadding="7dp"
                    android:fontFamily="@font/sfpro"
                    android:text="CHK- 3"
                    android:textColor="#515050"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/checkpoint"
                    android:fontFamily="@font/sfpro"
                    android:text="Food Packing Department 3rd Floor"
                    android:textColor="#515050"
                    android:textSize="10sp" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>